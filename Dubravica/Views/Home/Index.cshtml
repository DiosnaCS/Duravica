@using Dubravica.Controllers
@using System.Web.Mvc
@{
    ViewBag.Title = "Home - Diosna cloud";
    bool hasKBAse = false;
    foreach (dynamic projectNumber in ViewBag.Numbers)
    {
        if(projectNumber == 10000) {
            hasKBAse = true;
            break;
        }
    }
    int index;
    if (hasKBAse == true) {
        index = 1;
    } else {
        index = 0;
    }
    double some = Math.Ceiling((double)ViewBag.Numbers.Count / 3);
}
<h2>Welcome to Diosna cloud homepage</h2>
<div class="row">
    <h6>Select your destination / bakery</h6>
    <div class="well">
        @for (int idx = index; idx <= some; idx++)
        {
            <div class="btn-group btn-group-justified">
                @for (int i = 1; i <= 3 && index <= (ViewBag.Count - 1); i++)
                {
                    <a href="/Menu/Index/@ViewBag.Numbers[index]" class="btn btn-primary">@ViewBag.Text[index]&rAarr;</a>
                    index++;
                }
            </div>
            <p></p>
        }
    </div>
    @if (hasKBAse == true)
    {
    <h6>Read general or project specific articles in our knowledge base</h6>   
        <div class="btn-group btn-group-justified well">
            <a href="/Menu/Index/@ViewBag.Numbers[0]" class="btn btn-primary">Knowledge Base&rAarr;</a>
        </div>
    }
    <p></p>
    <h6>Go to the guest zone (login not necessary)</h6>
    <div class="btn-group btn-group-justified well">
        <a href="/Home/GuestZone" class="btn btn-primary">Guest Zone</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Compatibility</h2>
        <p>
            Best compatible with chrome<br>
            Other modern browsers are also supported
        </p>
        <p><a class="btn btn-primary" href="http://users.diosn.cz/Home/Compatibility/">See more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>News</h2>
        <p>
            In latest update have been add following features:<br>
            Time of starts and ends are in the local time zone<br />
            New style od this cloud for Dubravica priojecz<br>
            Menu of this page hase been changed to more user-friendly platform.
        </p>
        <p><a class="btn btn-primary" href="http://users.diosna.cz/Home/News/">See more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Link to Diosna website:</h2>
        <p>If you need to visit czech diosna website click below</p>
        <p><a class="btn btn-primary" href="http://diosna.cz/">Bye &raquo;</a></p>
    </div>
</div>